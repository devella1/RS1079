<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".fragments.dialogFragment"

    >


    <TextView
        android:id="@+id/buffertext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkgreen"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/buffer"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buffertext"
        android:text="swami"
        android:textSize="15dp"
        android:background="@color/forestgreen"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/buffervalue"/>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buffertext"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/language"
        android:layout_below="@+id/seekbar"
        android:layout_marginTop="20dp"
        android:background="@color/darkgreen"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:id="@+id/languages"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/languages"
        android:entries="@array/languagelist"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        />

<!--        //added for the themes-->

    <TextView
        android:id="@+id/the"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar"
        android:layout_marginTop="20dp"
        android:background="@color/darkgreen"
        android:padding="10dp"
        android:text="@string/language"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/languages"
        android:entries="@array/languagelist"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        />

<!--Till here-->
    <TextView
        android:id="@+id/TextViewThemes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Spinner"
        android:layout_marginTop="10dp"
        android:background="@color/darkgreen"
        android:padding="10dp"
        android:text="Map Themes"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/Themes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewThemes"
        android:layout_marginTop="5dp"
        android:entries="@array/themeslist"
        android:padding="10dp" />

</RelativeLayout>